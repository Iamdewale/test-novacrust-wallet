{
  "info": {
    "_postman_id": "a9c7c7d1-9f4c-4c91-b9d1-111111111111",
    "name": "Wallet Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for the NestJS Wallet Service take-home test"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "walletAId",
      "value": ""
    },
    {
      "key": "walletBId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Create Wallet A",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/wallets",
          "host": ["{{base_url}}"],
          "path": ["wallets"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currency\": \"USD\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.collectionVariables.set('walletAId', res.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Wallet B",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/wallets",
          "host": ["{{base_url}}"],
          "path": ["wallets"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currency\": \"USD\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.collectionVariables.set('walletBId', res.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Fund Wallet A",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/wallets/{{walletAId}}/fund",
          "host": ["{{base_url}}"],
          "path": ["wallets", "{{walletAId}}", "fund"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 1000\n}"
        }
      }
    },
    {
      "name": "Transfer Funds",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/wallets/transfer",
          "host": ["{{base_url}}"],
          "path": ["wallets", "transfer"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fromWalletId\": \"{{walletAId}}\",\n  \"toWalletId\": \"{{walletBId}}\",\n  \"amount\": 200\n}"
        }
      }
    },
    {
      "name": "Fetch Wallet A Details",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/wallets/{{walletAId}}",
          "host": ["{{base_url}}"],
          "path": ["wallets", "{{walletAId}}"]
        }
      }
    }
  ]
}
